public class Human extends Player
{
	//-----------------------------------------------------------------
	//  Constructor!  Here it is!
	//-----------------------------------------------------------------
	public Human()
	{
		super("Human");
	}
	
	//-----------------------------------------------------------------
	//  Will you be a pig?
	//-----------------------------------------------------------------
	public boolean beAPig(boolean isPig)
	{
		if (isPig == true)
		{
			pigness = true;
			return true;
		}
		else
		{
			pigness = false;
			return false;
		}
	}
}
