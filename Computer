public class Computer extends Player
{
	//-----------------------------------------------------------------
	//  Constructor!  Here it is!
	//-----------------------------------------------------------------
	public Computer()
	{
		super("Computer");
	}
	
	//-----------------------------------------------------------------
	//  Will you be a pig?
	//-----------------------------------------------------------------
	public boolean beAPig(boolean isPig)
	{
		if (roundPoints < 20)
		{
			pigness = true;
			return true;
		}
		else
		{
			pigness = false;
			return false;
		}
	}
}
